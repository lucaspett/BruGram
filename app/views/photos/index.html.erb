<h1>Photo Feed</h1>
<%= link_to 'New Bru' , new_photo_path, class: 'btn btn-success' do %>
  <i class="glyphicon glyphicon-pencil"></i>
<br> <br>
<table class="table">
  <tr>
    <th>Caption</th>
    <th>Image</th>
    <th colspan="3"></th>
  </tr>
 
  <% @photos.each do |photo| %>
    <% if photo.public == true || photo.user == current_user %>
    <tr>
      <td class="col-md-4"><%= photo.caption %><br><br><br><p>Submitted by <%= photo.user.email %></p></td>
      <td><%= image_tag photo.image, :class => 'photo-display' %></td>
      <td><%= link_to 'Show', photo_path(photo), class: 'btn btn-default' %></td>
      <td><%= link_to 'Edit', edit_photo_path(photo), class: 'btn btn-default' %></td>
      <td><%= link_to 'Destroy', photo_path(photo), class: 'btn btn-default',
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  <% end %>
</table>




